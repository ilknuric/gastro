
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Gastro Koçak Handel GmbH | Admin Dashboard</title>
    <link rel="shortcut icon" href="/assets/img/favicon.png">
    <link rel="stylesheet" href="assets/css/select2.min.css">
    <link rel="stylesheet" href="assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/plugins/bootstrap-tagsinput/css/bootstrap-tagsinput.css">
    <link rel="stylesheet" href="assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="assets/plugins/feather/feather.css">
	<link rel="stylesheet" href="assets/css/ckeditor.css">
    <link rel="stylesheet" href="assets/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <%- include('./sidebar.ejs') %>
        <%- include('./header.ejs') %>
        <div class="page-wrapper">
            <div class="content">
                <form action="../admin/add-new-product" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 ">
                            <div class="content-page-header">
                                <h5>Neues Produkt hinzufügen</h5>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Produktbild <span class="text-success">(Sie können mehrere Fotos hochladen)</span></label>
                                        <input type="file" class="form-control" name="productImages" style="padding: 15px 20px;" multiple>
                                    </div>                                    
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Produktname</label>
                                        <input type="text" class="form-control" required name="productName">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Preis</label>
                                        <input type="text" class="form-control" required name="price">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <select class="select" name="status" required>
                                            <option value="" disabled selected>Wählen Sie Status aus</option>
                                            <option value="Active">Aktiv</option>
                                            <option value="Passive">Passiv</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Pakettyp</label>
                                        <select class="select" name="package" required>
                                            <option value="" disabled>Wählen Sie den Pakettyp aus</option>
                                            <% package.forEach((package) => { %>
                                            <option value="<%= package._id %>"><%= package.packageName %></option>
                                            <% }); %>
                                        </select>
                                    </div>                                    
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Kategorie</label>
                                        <select class="select" required name="category">
                                            <option value="" disabled selected>Kategorie wählen</option>
                                            <% categories.forEach((category) => { %>
                                                <option value="<%= category._id %>"><%= category.categoryName %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Marken</label>
                                        <select class="select" required name="brandName">
                                            <option value="" disabled selected>Marken</option>
                                            <% brands.forEach((brand) => { %>
                                                <option value="<%= brand.brandName %>"><%= brand.brandName %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Beschreibung</label>
                                        <textarea name="description" id="editor"></textarea>
                                    </div>
                                </div>
                                <!--
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea name="description" id="" cols="30" rows="10" class="form-control" ></textarea>
                                    </div>
                                </div>-->
                                <div class="col-lg-12">
                                    <div class="btn-path">
                                        <a href="./products" class="btn btn-cancel me-3">Storniern</a>
                                        <button type="submit" class="btn btn-submit "> Speichern</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div> 
    </div>
    <script src="assets/js/jquery-3.6.4.min.js"></script>
    <script src="assets/js/select2.min.js"></script>
    <script src="assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/plugins/bootstrap-tagsinput/js/bootstrap-tagsinput.js"></script>
    <script src="assets/js/feather.min.js"></script>
    <script src="assets/js/jquery.dataTables.min.js"></script>
    <script src="assets/js/dataTables.bootstrap4.min.js"></script>
	<script src="assets/js/ckeditor.js"></script>
    <script src="assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="assets/plugins/sweetalert/sweetalert2.all.min.js"></script>
    <script src="assets/plugins/sweetalert/sweetalerts.min.js"></script>
    <script src="assets/js/admin.js"></script>
</body>
</html>