<body>
    <div class="main-wrapper">
        <%- include('./sidebar.ejs') %>
        <%- include('./header.ejs') %>
        <div class="page-wrapper">
            <div class="content">
                <form action="../edit-slide-app/<%= slide._id %>" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 ">
                            <div class="content-page-header">
<h5>Slide bearbeiten</h5>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <img src="<%= slide.image_path %>" alt="gastro" height="200px; object-fit:contain;">
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label>Slidebild</label>
                                        <input type="file" class="form-control" name="slideImage" style="padding: 15px 20px;">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Schieben Sie kleinen Text</label>
                                        <input type="text" class="form-control" value="<%= slide.slideSmall%>" name="slideSmall">
                                    </div>
                                </div>
								 <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Schieben Sie grossen Text</label>
                                        <input type="text" class="form-control" value="<%= slide.slideBig%>" name="slideBig">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="btn-path">
                                        <a href="/admin/slides" class="btn btn-cancel me-3">Storniern</a>
                                        <button type="submit" class="btn btn-submit "> Speichern</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div> 
    </div>
	    <script src="/admin/assets/js/jquery-3.6.4.min.js"></script>
    <script src="/admin/assets/js/select2.min.js"></script>
    <script src="/admin/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/assets/plugins/bootstrap-tagsinput/js/bootstrap-tagsinput.js"></script>
    <script src="/admin/assets/js/feather.min.js"></script>
    <script src="/admin/assets/js/jquery.dataTables.min.js"></script>
    <script src="/admin/assets/js/dataTables.bootstrap4.min.js"></script>
	<script src="/admin/assets/js/ckeditor.js"></script>
    <script src="/admin/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/admin/assets/plugins/sweetalert/sweetalert2.all.min.js"></script>
    <script src="/admin/assets/plugins/sweetalert/sweetalerts.min.js"></script>
    <script src="/admin/assets/js/admin.js"></script>
</body>
</html>